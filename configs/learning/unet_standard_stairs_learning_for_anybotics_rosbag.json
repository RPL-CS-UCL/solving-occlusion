{
    "name": "unet_standard_stairs_learning_for_anybotics_rosbag",
    "cuda": true,
    "experiment": {
        "task_path": {
            "defaults": {
                "loss": {
                    "report_frequency": 100,
                    "normalization": [],
                    "train_weights": {
                        "reconstruction": 0,
                        "reconstruction_non_occlusion": 1,
                        "reconstruction_occlusion": 6
                    },
                    "eval_weights": {
                        "reconstruction": 0,
                        "reconstruction_non_occlusion": 0,
                        "reconstruction_occlusion": 1
                    }
                },
                "domain_defaults": {
                    "batch_size": 6,
                    "dataset": {
                        "type": "hdf5",
                        "path": "data/2020-09-26-13-31-23_dataset_generation_synthetic_standard_stairs_dataset_generation_maximilianstoelzle/DATASET_OCCLUSION.hdf5",
                        "size": [64, 64],
                        "transforms": {
                            "defaults": [
                                {
                                    "type": "random_vertical_scale",
                                    "min": 0.8,
                                    "max": 3,
                                    "apply_to": ["params", "occluded_elevation_map", "ground_truth_elevation_map"]
                                },
                                {
                                    "type": "random_vertical_offset",
                                    "min": -1,
                                    "max": 1,
                                    "apply_to": ["params", "occluded_elevation_map", "ground_truth_elevation_map"]
                                },
                                {
                                    "type": "random_noise",
                                    "stdev": 0.05,
                                    "apply_to": ["occluded_elevation_map"]
                                },
                                {
                                    "type": "random_occlusion",
                                    "probability": 0.0025,
                                    "apply_to": ["occluded_elevation_map", "binary_occlusion_map"]
                                }
                            ]
                        }
                    },
                    "num_workers": 4,
                    "shuffle": true
                },
                "model": {
                    "name": "UNet",
                    "save_frequency": 1,
                    "input_dim": [64, 64],
                    "in_channels": ["occluded_elevation_map", "binary_occlusion_map"],
                    "out_channels": ["reconstructed_elevation_map"],
                    "hidden_dims": [64, 128, 256],
                    "input_normalization": false,
                    "NaN_replacement": 0,
                    "bilinear": true
                },
                "optimizer": {
                    "name": "Adam",
                    "lr": 0.0001,
                    "weight_decay": 0.001
                },
                "controller": {
                    "max_num_epochs": 50,
                    "max_num_better_results": 20
                }
            },
            "tasks": [
                {
                    "task_type": "supervised-learning",
                    "model_to_train": "untrained",
                    "domains": {"target": {}},
                    "dataloaders": {"labeled_dataloader":  "target"}
                },
                {
                    "task_type": "supervised-learning",
                    "model_to_train": "untrained",
                    "domains": {"target": {}},
                    "dataloaders": {"labeled_dataloader":  "target"},
                    "loss": {
                        "train_weights": {
                            "perceptual": 0.05,
                            "style": 120,
                            "total_variation": 0.1
                        }
                    }
                }
            ]
        },
        "visualization": {"sample_frequency":  10}
    },
    "logging": {
        "upload": false
    },
    "remote": true,
    "seeds": [101]
}
