{
    "name": "sample",
    "cuda": false,
    "dataset_generation": {
        "type": "synthetic",
        "terrain_types": ["HEIGHT_MAP"],
        "elevation_map": {
            "resolution": 0.04,
            "size": 64,
            "height_viewpoint": {"min":  0.2, "max":  0.5}
        },
        "robot_position": {
            "x": {"min":  0, "max":  1},
            "y": {"min":  0, "max":  1},
            "yaw": {"min":  0, "max":  360}
        },
        "num_train_samples": 100,
        "num_val_samples": 100,
        "num_test_samples": 100,
        "save_frequency": 10,
        "visualization": {
            "frequency": 50
        }
